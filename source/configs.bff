
.Configuration_Debug =
[
    .ConfigurationName = 'Debug'
    .ConanConfiguration = 'Debug'
]

.Configuration_Develop =
[
    .ConfigurationName = 'Develop'
    .ConanConfiguration = 'Release'
]

.Configuration_Profile =
[
    .ConfigurationName = 'Profile'
    .ConanConfiguration = 'Release'
]

.Configuration_Release =
[
    .ConfigurationName = 'Release'
    .ConanConfiguration = 'Release'
]

^ConfigurationList = {
    .Configuration_Debug
    .Configuration_Develop
    .Configuration_Profile
    .Configuration_Release
}


.Config_MSVC =
[
    .Name = 'Config-MSVC'
    .Requires = { 'MSVC' }
    .BuildOptions = {
        '/std:c++latest'
        '/wd4127' // conditional expression is constant'
        '/permissive-'
        '/Z7'
        '/EHsc'
    }
]

.Config_MSVC_BinaryBase =
[
    .Name = 'MSVC-Binary'
    .LinkOptions = {
        '/DEBUG'
    }
]

.Config_MSVC_BinaryDll =
[
    Using( .Config_MSVC_BinaryBase )
    .Requires = { 'MSVC', 'SharedLib' }
]
.Config_MSVC_BinaryApp =
[
    Using( .Config_MSVC_BinaryBase )
    .Requires = { 'MSVC', 'WindowerApp' }
]
.Config_MSVC_BinaryApp2 =
[
    Using( .Config_MSVC_BinaryBase )
    .Requires = { 'MSVC', 'ConsoleApp' }
]

.Config_Debug =
[
    .Name = 'Config-Debug'
    .Requires = { 'Debug' }
    .Defines = {
        'ICE_DEBUG'
    }
]

.Config_Debug_MSVC =
[
    .Name = 'Config-Debug-MSVC'
    .Requires = { 'Debug', 'MSVC' }
    .Defines = {
        '_DEBUG'
    }
    .BuildOptions = {
        ' /Od'
        ' /MDd'
    }
]

.Config_Develop_MSVC =
[
    .Name = 'Config-Develop-MSVC'
    .Requires = { 'Develop', 'MSVC' }
    .Defines = { }
    .BuildOptions = {
        ' /O1'
        ' /MD'
    }
]

.Config_Profile_MSVC =
[
    .Name = 'Config-Profile-MSVC'
    .Requires = { 'Profile', 'MSVC' }
    .Defines = { }
    .BuildOptions = {
        ' /O2'
        ' /MD'
    }
]

.Config_Release_MSVC =
[
    .Name = 'Config-Release-MSVC'
    .Requires = { 'Release', 'MSVC' }
    .Defines = { }
    .BuildOptions = {
        ' /O2'
        ' /MD'
    }
]

.Config_Develop =
[
    .Name = 'Config-Develop'
    .Requires = { 'Develop' }
    .Defines = {
        'ICE_DEVELOP'
    }
]

.Config_Profile =
[
    .Name = 'Config-Profile'
    .Requires = { 'Profile' }
    .Defines = {
        'ICE_PROFILE'
    }
]

.Config_Release =
[
    .Name = 'Config-Release'
    .Requires = { 'Release' }
    .Defines = {
        'ICE_RELEASE'
    }
]

^GlobalRules = {
    .Config_MSVC
    .Config_MSVC_BinaryDll
    .Config_MSVC_BinaryApp
    .Config_MSVC_BinaryApp2
    .Config_Debug
    .Config_Debug_MSVC
    .Config_Develop
    .Config_Develop_MSVC
    .Config_Profile
    .Config_Profile_MSVC
    .Config_Release
    .Config_Release_MSVC
}
