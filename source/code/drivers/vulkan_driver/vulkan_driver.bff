.Project =
[
    .Name = 'vulkan_driver'
    .Kind = .Kind_SharedLib
    .Group = 'Drivers'

    .BaseDir = '$WorkspaceCodeDir$/drivers/vulkan_driver'

    .Requires = {
        'SDK-Vulkan'
    }

    .Private =
    [
        .Modules = {
            'SDL2'
        }
        .Uses = {
            'render_system'
        }

        .Defines = {
            'VK_USE_PLATFORM_WIN32_KHR'
        }
    ]
]
.Projects + .Project
