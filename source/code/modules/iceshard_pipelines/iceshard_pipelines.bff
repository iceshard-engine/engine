.Project =
[
    .Name = 'iceshard_pipelines'
    .Kind = .Kind_SharedLib
    .Group = 'Modules'

    .BaseDir = '$WorkspaceCodeDir$/modules/iceshard_pipelines'

    .Requires = {
        'Windows'
    }

    .Private =
    [
        .Modules = {
            'arctic'
            'assimp'
            'freetype'
            'msdfgen'
            'msdf_atlas_gen'
            'rapidxml_ns'
        }
        .Uses = {
            'utils'
            'modules'
            'asset_system'
            'render_system'
            'ui_system'
            'engine'
        }
    ]
]
.Projects + .Project
