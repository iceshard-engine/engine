.Project =
[
    .Name = 'test'
    .Kind = .Kind_ConsoleApp
    .Group = 'Tests'
    .Requires = { 'Windows' }

    .BaseDir = '$WorkspaceCodeDir$/test'

    .CopyModules = true

    .Private =
    [
        .Modules = {
            'imgui'
            'assimp'
        }
        .Uses = {
            'utils'
            'tasks'
            'modules'
            'engine'
            'framework_base'
        }
    ]

    .ReleaseDeploy =
    [
        .Requires = { 'Release' }

        .Deploy = true
        .DependsOn =
        [
            .Runtime = {
                'shader_tools'
                'vulkan_renderer'
            }
        ]
    ]
    .Rules = { .ReleaseDeploy }
]
.Projects + .Project
