.Project =
[
    .Name = 'test'
    .Kind = .Kind_ConsoleApp
    .Group = 'Tests'

    .BaseDir = '$WorkspaceCodeDir$/test'

    .CopyModules = true

    .Private =
    [
        .DependsOn =
        [
            .Runtime = {
                'iceshard'
                'sdl2_driver'
                'imgui_driver'
            }
#if exists(VULKAN_SDK)
            .Runtime + 'vulkan_driver'
#endif
        ]

        .Modules = {
            'glm'
            'imgui'
            'SDL2'
        }
        .Uses = {
            'debugui_system'
            'application'
            'engine'
        }
    ]
]
.Projects + .Project
