.Project =
[
    .Name = 'core'
    .Kind = .Kind_StaticLib
    .Group = 'Core'

    .BaseDir = '$WorkspaceCodeDir$/core/core'

    .Public =
    [
        .Modules = {
            'fmt'
        }
    ]

    ; We only profile the tracy module in the 'Profile' configuration.
    .TracyProfiler =
    [
        .Requires = { 'Profile' }
        .Public =
        [
            .Modules = {
                'Tracy'
            }
        ]
    ]
    .Rules = { .TracyProfiler }
]
.Projects + .Project
