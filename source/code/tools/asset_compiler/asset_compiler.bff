.Project =
[
    .Name = 'asset_compiler'
    .Kind = .Kind_ConsoleApp
    .BaseDir = '$WorkspaceCodeDir$/tools/asset_compiler'
    .Group = 'Tools'

    .CopyModules = true

    .Requires = {
        'Windows'
    }

    .LocalCompiler =
    [
        .Name = 'isac'
        .LocalCompilerConfig = 'Release'
    ]

    .Private =
    [
        .DependsOn =
        [
            .Runtime = {
                'shader_tools'
            }
        ]

        .Uses = {
            'tool_base'
            'resource_system'
        }
    ]
]
.Projects + .Project
