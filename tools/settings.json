{
    "windows": {
        "project": {
            "script_file": "ice.bat",
            "fbuild": {
                "vstudio_solution_file": "IceShard.sln"
            }
        },
        "doxy": {
            "path": "~/bin/doxy/doxygen.exe"
        }
    },
    "linux": {
        "project": {
            "script_file": "ice.sh"
        }
    },
    "project": {
        "output_dir": "build",
        "source_dir": "source/code",
        "fbuild": {
            "config_file": "source/fbuild.bff"
        }
    },
    "license": {
        "spdx": "MIT",
        "authors": "Dandielo <dandielo@iceshard.net>"
    },
    "android": {
        "gradle": {
            "version": "8.14"
        },
        "projects": [ "source/code/example/android" ]
    },
    "webasm": {
        "emscripten": {
            "location": "build/webasm",
            "version": "4.0.18"
        }
    },
    "doxy": {
        "config": "source/configs/doxyfile"
    },
    "vulkan": {
        "version": "1.4.313.0"
    }
}
